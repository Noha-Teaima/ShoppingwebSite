@{
    Layout = "_myLayout";
}


<div class="row row-cols-1 row-cols-md-2 g-4" >
    

     @foreach (var item in Model)
    {
         <div class="col">
    <div class="card">
      <img src="@item.img" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">@item.category</h5>
        <h5>@item.price $</h5>
        <p class="card-text">@item.description</p>
      </div>
    </div>
  </div>
    }
  </div>